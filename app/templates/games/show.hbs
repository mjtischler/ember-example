{{outlet}}
<div class="jumbo show-listing">
    <h2 class="title">{{model.title}}</h2>
    <div class="right detail-section">
        <div class="detail publisher">
            <strong>Publisher:</strong> {{model.owner}}
        </div>

        <div class="detail">
            <strong>Genre:</strong> {{game-player-type model.players}} - {{model.genre}}
        </div>

        <div class="detail">
            <strong>Release Date:</strong> {{model.release}}
        </div>

        <p class="description">{{model.description}}</p>
    </div>

    <img src="{{model.image}}" class="game-pic">
</div>
